{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Driver standings by race",
    "width": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/toUpperCase78/formula1-datasets/master/Formula1_2022season_raceResults.csv"
    },
    "params": [
        {
            "name": "Race_selection",
            "bind":{
                "input": "select",
                "options": [
                    "All",
                    "Bahrain",
                    "Saudi Arabia",
                    "Australia",
                    "Emilia Romagna",
                    "Miami",
                    "Spain",
                    "Monaco",
                    "Azerbaijan",
                    "Canada",
                    "Great Britain",
                    "Austria",
                    "France",
                    "Hungary",
                    "Belgium",
                    "Netherlands",
                    "Italy",
                    "Singapore"
                    ],
                    "labels":[
                        "Show all",
                        "Bahrain Grand Prix",
                        "Saudi Arabia Grand Prix",
                        "Australian Grand Prix",
                        "Emilia Romagna Grand Prix",
                        "Miami Grand Prix",
                        "Spanish Grand Prix",
                        "Monaco Grand Prix",
                        "Azerbaijan Grand Prix",
                        "Canadian Grand Prix",
                        "British Grand Prix",
                        "Austrian Grand Prix",
                        "French Grand Prix",
                        "Hungarian Grand Prix",
                        "Belgian Grand Prix",
                        "Dutch Grand Prix",
                        "Italian Grand Prix",
                        "Singapore Grand Prix"
                    ],
                "name": "Race Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "Race_selection == null || datum.Track == Race_selection"}
        
    ],
    "mark":"bar",
    "encoding": {
        "x": { "field": "Driver","type":"nominal", "sort": "-y" },
        "y": { "field": "Points","type":"quantitative"},
        "tooltip": [
            {"field": "Driver","type":"nominal"},
            {"field": "Team","type":"nominal"},
            {"field": "Position","type":"ordinal"},
            {"field": "Points","type":"quantitative"},
            {"field": "Starting Grid", "type":"ordinal"},
            {"field": "Fastest Lap", "type": "nominal"},
            {"field": "Time/Retired", "type": "nominal", "title": "Time"}
            
        ]
    }
}