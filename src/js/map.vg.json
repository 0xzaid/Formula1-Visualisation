{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Formula 1 2022 World Championship so far",
  "background": "lightskyblue",
  "projection": {
    "type": "equirectangular",
    "scale": 150
  },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/0xzaid/Map-Visualisation-using-Vega-Lite/main/data/map_cropped.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
        
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/0xzaid/Map-Visualisation-using-Vega-Lite/main/data/F1/circuits2022.csv"
      },
      
      "mark": {
        "type": "circle",
        "size": 65
      },
      "encoding": {
        "longitude": {
          "field": "lng",
          "type": "quantitative"
          
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        },
        "tooltip": [
          {"field": "name", "type": "nominal", "title": "Circuit Name"},
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "DriverWinner", "type": "nominal", "title": "Winning driver"},
          {"field": "ConsWinner", "type": "nominal", "title": "Winning constructor"}
          ],
        "color": {
          "field": "Completed",
          "type": "nominal",
          "legend": {
            "title": "Race completed?",
            "labelFontSize": 12,
            "titleFontSize": 14
          },
          "scale": {
            "domain": [
              "Yes",
              "No",
              "Cancelled"
            ],
            "range": [
              "green",
              "red",
              "blue"
            ]
          }
          
        }

      }
      
    }
  ]
}
